<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">


    <!--测试servlet-->
    <servlet>
        <servlet-name>test</servlet-name>
        <servlet-class>tests</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>test</servlet-name>
        <url-pattern>/api/test</url-pattern>
    </servlet-mapping>




    <!--判断是否注册-->
    <servlet>
        <servlet-name>isRegistered</servlet-name>
        <servlet-class>isRegistered</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>isRegistered</servlet-name>
        <url-pattern>/api/isRegistered</url-pattern>
    </servlet-mapping>

    <!--注 册-->
    <servlet>
        <servlet-name>register</servlet-name>
        <servlet-class>register</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/api/register</url-pattern>
    </servlet-mapping>

    <!--登 录-->
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/api/login</url-pattern>
    </servlet-mapping>


    <!--修改密码-->
    <servlet>
        <servlet-name>changePassword</servlet-name>
        <servlet-class>changePassword</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>changePassword</servlet-name>
        <url-pattern>/api/changePassword</url-pattern>
    </servlet-mapping>

    <!--重置密码-->
    <servlet>
        <servlet-name>resetPassword</servlet-name>
        <servlet-class>resetPassword</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>resetPassword</servlet-name>
        <url-pattern>/api/resetPassword</url-pattern>
    </servlet-mapping>


    <!--获取用户信息-->
    <servlet>
        <servlet-name>getUserInfo</servlet-name>
        <servlet-class>getUserInfo</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getUserInfo</servlet-name>
        <url-pattern>/api/getUserInfo</url-pattern>
    </servlet-mapping>

    <!--修改用户信息-->
    <servlet>
        <servlet-name>editUserInfo</servlet-name>
        <servlet-class>editUserInfo</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>editUserInfo</servlet-name>
        <url-pattern>/api/editUserInfo</url-pattern>
    </servlet-mapping>


    <!--获取商品列表-->
    <servlet>
        <servlet-name>getGoodsList</servlet-name>
        <servlet-class>getGoodsList</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getGoodsList</servlet-name>
        <url-pattern>/api/getGoodsList</url-pattern>
    </servlet-mapping>

    <!--获取商品详情-->
    <servlet>
        <servlet-name>getGoodsDetail</servlet-name>
        <servlet-class>getGoodsDetail</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getGoodsDetail</servlet-name>
        <url-pattern>/api/getGoodsDetail</url-pattern>
    </servlet-mapping>

    <!--发布商品-->
    <servlet>
        <servlet-name>releaseGoods</servlet-name>
        <servlet-class>releaseGoods</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>releaseGoods</servlet-name>
        <url-pattern>/api/releaseGoods</url-pattern>
    </servlet-mapping>

    <!--删除发布的商品-->
    <servlet>
        <servlet-name>deleteGoods</servlet-name>
        <servlet-class>deleteGoods</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteGoods</servlet-name>
        <url-pattern>/api/deleteGoods</url-pattern>
    </servlet-mapping>

    <!--修改发布的商品-->
    <servlet>
        <servlet-name>editGoodsInfo</servlet-name>
        <servlet-class>editGoodsInfo</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>editGoodsInfo</servlet-name>
        <url-pattern>/api/editGoodsInfo</url-pattern>
    </servlet-mapping>

    <!--获取自己发布的商品-->
    <servlet>
        <servlet-name>getMyGoods</servlet-name>
        <servlet-class>getMyGoods</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getMyGoods</servlet-name>
        <url-pattern>/api/getMyGoods</url-pattern>
    </servlet-mapping>

    <!--学生身份验证-->
    <servlet>
        <servlet-name>verifyStu</servlet-name>
        <servlet-class>verifyStu</servlet-class>
    </servlet>
    <servlet-mapping>
