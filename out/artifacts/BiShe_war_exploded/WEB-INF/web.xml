<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <!--判断是否注册-->
    <servlet>
        <servlet-name>isRegistered</servlet-name>
        <servlet-class>isRegistered</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>isRegistered</servlet-name>
        <url-pattern>/api/isRegistered</url-pattern>
    </servlet-mapping>

    <!--注 册-->
    <servlet>
        <servlet-name>register</servlet-name>
        <servlet-class>Register</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/api/register</url-pattern>
    </servlet-mapping>

    <!--登 录-->
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>Login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/api/login</url-pattern>
    </servlet-mapping>


    <!--修改密码-->
    <servlet>
        <servlet-name>changePassword</servlet-name>
        <servlet-class>ChangePassword</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>changePassword</servlet-name>
        <url-pattern>/api/changePassword</url-pattern>
    </servlet-mapping>

    <!--忘记密码-->
    <servlet>
        <servlet-name>ForgetPassword</servlet-name>
        <servlet-class>ForgetPassword</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ForgetPassword</servlet-name>
        <url-pattern>/api/forgetPassword</url-pattern>
    </servlet-mapping>


    <!--获取用户信息-->
    <servlet>
        <servlet-name>getUserInfo</servlet-name>
        <servlet-class>getUserInfo</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getUserInfo</servlet-name>
        <url-pattern>/api/getUserInfo</url-pattern>
    </servlet-mapping>

</web-app>